<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.xsy.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.xsy.servlet.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddArticleServlet</servlet-name>
        <servlet-class>com.xsy.servlet.AddArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddArticleServlet</servlet-name>
        <url-pattern>/addarticle</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ArticleListServlet</servlet-name>
        <servlet-class>com.xsy.servlet.ArticleListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArticleListServlet</servlet-name>
        <url-pattern>/articlelist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserListServlet</servlet-name>
        <servlet-class>com.xsy.servlet.UserListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserListServlet</servlet-name>
        <url-pattern>/userlist</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ArticlePageServlet</servlet-name>
        <servlet-class>com.xsy.servlet.ArticlePageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArticlePageServlet</servlet-name>
        <url-pattern>/articlepage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserPageServlet</servlet-name>
        <servlet-class>com.xsy.servlet.UserPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserPageServlet</servlet-name>
        <url-pattern>/userpage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetLabelServlet</servlet-name>
        <servlet-class>com.xsy.servlet.GetLabelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetLabelServlet</servlet-name>
        <url-pattern>/getlabel</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditLabelServlet</servlet-name>
        <servlet-class>com.xsy.servlet.EditLabelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditLabelServlet</servlet-name>
        <url-pattern>/editlabel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetDataServlet</servlet-name>
        <servlet-class>com.xsy.servlet.GetDataServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditLabelServlet</servlet-name>
        <url-pattern>/getdata</url-pattern>
    </servlet-mapping>
</web-app>
